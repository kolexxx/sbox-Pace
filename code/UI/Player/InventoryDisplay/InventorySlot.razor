@using Sandbox;
@using Sandbox.UI;
@using System;

@namespace Pace.UI
@attribute [StyleSheet]
@inherits Panel

@if (Game.LocalPawn.LifeState != LifeState.Alive)
{
	return;
}

<root class="rounded @(Weapon?.IsActive ?? false ? "active" : "")">
	@if (Weapon.IsValid())
	{
		<img src=@Weapon.Definition.IconPath />
	}
	<InputGlyph action=@Pace.InputAction.SlotToAction(Slot) />
</root>

@code
{
	public int Slot { get; set; }
	public Weapon Weapon => ((Pawn)Game.LocalPawn).Inventory[Slot];

	protected override int BuildHash()
	{
		return HashCode.Combine(Game.LocalPawn.LifeState, Weapon, Weapon?.IsActive);
	}
}