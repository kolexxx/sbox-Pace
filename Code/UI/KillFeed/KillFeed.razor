@using Sandbox
@using Sandbox.UI
@using System.Collections.Generic

@namespace Pace.UI
@attribute [StyleSheet]
@inherits Panel

<root />

@code
{
    public static KillFeed Instance { get; private set; }
    public KillFeed() => Instance = this;

    public static void AddEntry(Pace.DamageInfo damage)
    {
        Instance.AddChild(new KillFeedEntry(damage));
    }
}