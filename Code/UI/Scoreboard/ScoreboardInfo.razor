@using Sandbox
@using Sandbox.UI
@using System

@namespace Pace.UI
@attribute [StyleSheet]
@inherits Panel

<root class="rounded-top text-shadow">
	<div class="server-information">
		<label class="title">Pace</label>
		<label class="url">github.com/kolexxx/sbox-Pace</label>
	</div>
	<div class="server-data">
		<label style="font-weight: bold;">Test Arena</label>
		<label>@($"{Connection.All.Count} / 32 Players")</label>
	</div>
</root>

@code
{
	protected override int BuildHash()
	{
		return HashCode.Combine(Connection.All.Count);
	}
}